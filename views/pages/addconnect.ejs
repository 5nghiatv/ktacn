
    <main>
        <h3>Update Connect</h3>

        <form action="/connect/update" method="POST" autocomplete="off">
            <input type="hidden" name="_id" value="<%= connect._id %>" >
            <div class="form-row">
                <div class="form-group col-md-6" style="padding-left: 0px;" >
                    <label>Company</label>
                    <input type="text" class="form-control" name="company" placeholder="Company" value="<%= connect.company %>">
                    <div class="text-danger"><%= connect.companyError %></div>
                </div>
                <div class="form-group col-md-6" style="padding-left: 0px;" >
                    <label>Address</label>
                    <input type="text" class="form-control" name="address" placeholder="Address" value="<%= connect.address %>">
                    <div class="text-danger"><%= connect.addressError %></div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-3" style="padding-left: 0px;" >
                    <label>Tax-code</label>
                    <input type="text" class="form-control" name="taxcode" placeholder="Tax-code" value="<%= connect.taxcode %>">
                    <div class="text-danger"><%= connect.taxcodelError %> </div>
                </div>
                <div class="form-group col-md-3" style="padding-left: 0px;" >
                    <label>Host</label>
                    <input type="text" class="form-control" name="host" placeholder="Host" value="<%= connect.host %>">
                    <div class="text-danger"><%= connect.hostError %></div>
                </div>
                <div class="form-group col-md-3" style="padding-left: 0px;" >
                    <label>User name</label>
                    <input type="text" class="form-control" name="username" placeholder="User name" value="<%= connect.username %>">
                    <div class="text-danger"><%= connect.usernameError %></div>
                </div>
                <div class="form-group col-md-3" style="padding-left: 0px;" >
                    <label>Password</label>
                    <input type="text" class="form-control" name="password" placeholder="Password" value="<%= connect.password %>">
                    <div class="text-danger"><%= connect.passwordError %></div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-3" style="padding-left: 0px;" >
                    <label>Database</label>
                    <input type="text" class="form-control" name="database" placeholder="Database" value="<%= connect.database %>">
                </div>
                <div class="form-group col-md-2" style="padding-left: 0px;" >
                    <label>Port</label>
                    <input type="text" class="form-control" name="port" placeholder="Port" value="<%= connect.port %>">
                </div>

                <div class="form-group col-md-1" style="padding-left:7px;" >
                    <label for="active"><strong>Active</strong></label> &nbsp;&nbsp;
                    <% if(connect.active==true){ %>
                        <input type="checkbox" id="active" name="active" checked>
                        <% } else { %>
                        <input type="checkbox" id="active" name="active">
                    <% } %>
                </div>

                <div class="form-group" style="padding-left:0px;" >
                    <button name='addnew' type="submit" class="btn btn-info"><i class="fa fa-file-o"></i> Add New</button>
                    <a class="btn btn-warning" href="/connects"><i class="fa fa-list-alt"></i> View All</a>
                    <button <%= btndisabled %> name='update' type="submit" class="btn btn-info"><i class="fa fa-database"></i> Update</button>
                    <button name='checkconnect' type="submit" class="btn btn-success"><i class="fa fa-file-o"></i> Check Connect</button>
                </div>

        </form>

    </main>
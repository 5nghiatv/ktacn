
    <main>
        <h3>Update Customer</h3>

        <form action="/customer/update" method="POST" autocomplete="off">
            <input type="hidden" name="_id" value="<%= customer._id %>" >
            <div class="form-group">
                <label>Full Name</label>
                <input type="text" class="form-control" name="fullname" placeholder="Full Name" value="<%= customer.fullname %>">
                <div class="text-danger">
                    <%= customer.fullnameError %></div>
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" name="email" placeholder="Email" value="<%= customer.email %>">
                <div class="text-danger">
                    <%= customer.emailError %></div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6" style="padding-left: 0px;" >
                    <label>Mobile</label>
                    <input type="text" class="form-control" name="mobile" placeholder="Mobile" value="<%= customer.mobile %>">
                </div>
                <div class="form-group col-md-6" style="padding-right: 0px;" >
                    <label>Address</label>
                    <input type="text" class="form-control" name="address" placeholder="Address" value="<%= customer.address %>">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6" style="padding-left: 0px;" >
                    <label>Tax-code</label>
                    <input type="text" class="form-control" name="taxcode" placeholder="Tax code" value="<%= customer.taxcode %>">
                </div>
                <div class="form-group col-md-6" style="padding-right: 0px;" >
                    <label>Date of birth</label>
                    <input type="date" class="form-control" name="birthdate" placeholder="date of birth" value="<%= customer.birthdate.toISOString().substring(0, 10)  %>">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6" style="padding-left: 0px;" >
                    <label>Accounts</label>
                    <input type="text" class="form-control" name="accounts" placeholder="Accounts" value="<%= customer.accounts %>">
                </div>
                <div class="form-group col-md-6" style="padding-right: 0px;" >
                    <label>Active</label>
                    <input type="text" class="form-control" name="active" placeholder="true or false" value="<%= customer.active  %>">
                </div>

                <div class="form-group">
                <button name='addnew' type="submit" class="btn btn-info"><i class="fa fa-file-o"></i> Add New</button>
                <a class="btn btn-warning" href="/customers"><i class="fa fa-list-alt"></i> View All</a>
                <button <%= btndisabled %> name='update' type="submit" class="btn btn-info"><i class="fa fa-database"></i> Update</button>

            </div>
        </form>

    </main>